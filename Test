#!/bin/bash

HOSTNAME=$1
PORT=$2
TOKEN=$3
INDEX=$4
HOST=$(hostname)
USER=$(whoami)

curl -k "https://$HOSTNAME:$PORT/services/collector/event" \
  -H "Authorization: Splunk $TOKEN" \
  -d "{
    \"event\": \"$USER is sending a test raw log from $HOST to $HOSTNAME:$PORT via curl\",
    \"index\": \"$INDEX\",
    \"host\": \"$HOST\",
    \"source\": \"HEC\"
  }"
